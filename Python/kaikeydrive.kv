<MusicPlayer>:
    file_name: file_name
    orientation:"vertical"

    Label:
        id: file_name
        size_hint: 1, 1
        text: "Hello World"
        center: root.center

    BoxLayout:
        Label:
            size_hint: 0.1, 0.2
            text: '0:00/0:00'
        Slider:
            size_hint: 0.7, 0.2
            max: 100
            value: 0
            on_value: root.clock()
    BoxLayout:
        spacing: 20
        Button:
            size_hint: 0.1, 0.2
            text: "ダイアログ"
            on_press: root.file()
        Button:
            size_hint: 0.1, 0.2
            text: "再生"
            on_press: root.play()
        Button:
            size_hint: 0.1, 0.2
            text: "停止"
            on_press: root.stop()
        Label:
            size_hint: 0.1, 0.2
            text: '音量'
        Slider:
            size_hint: 0.4, 0.2
            on_value: root.volume()